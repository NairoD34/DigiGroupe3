{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block main %}
    <h2>{{ title }}</h2>
    Connecté (admin) en tant que : <strong>{{ user.email }}</strong>,  <a href="{{ path('logout') }}">Déconnexion</a>
    <a href="{{ path('app_client_list_admin')}}"><h3>Clients</h3></a>
    <a href="{{ path('app_new_client')}}">Créer un nouveau client</a>

    {% for item in clients %}
    <a href="{{ path('app_client_show_admin', { 'id': item.id })}}">{{item.company}}</a>
    {% else %}
     <tr>
            <td colspan="5">Aucun enregistrement</td>
        </tr>
    {% endfor %}
    
    <a href="{{ path('app_project_list_admin')}}"><h3>Projets</h3></a>
    <a href="{{ path('app_new_project')}}">Créer un nouveau projet</a>
   {% for item in projects %}
    <a href="{{ path('app_project_show_admin', { 'id': item.id })}}">{{item.name}}</a>
    {% else %}
     <tr>
            <td colspan="5">Aucun enregistrement</td>
        </tr>

    {% endfor %}
    <a href="{{ path('app_user_list_admin')}}"><h3>Utilisateurs</h3></a>
    {% for item in users %}
    <a href="{{ path('app_user_show_admin', { 'id': item.id })}}">{{item.firstName}} {{item.lastName}}</a>
    {% else %}
     <tr>
            <td colspan="5">Aucun enregistrement</td>
        </tr>

    {% endfor %}

{% endblock %}